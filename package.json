{
  "name": "torii",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npx concurrently npm:watch-xstate npm:next-dev",
    "next-dev": "next dev",
    "build": "npm run build-xstate && next build",
    "start": "next start -p 8080",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,css,scss,yaml,yml}\"",
    "precommit": "lint-staged",
    "build-xstate": "npx xstate typegen src/fsm/game/game.ts",
    "watch-xstate": "npx xstate typegen src/fsm/game/game.ts --watch",
    "test": "jest"
  },
  "dependencies": {
    "@chakra-ui/next-js": "2.2.0",
    "@chakra-ui/react": "2.8.2",
    "@dicebear/collection": "7.0.1",
    "@dicebear/core": "7.0.1",
    "@emotion/react": "11.11.1",
    "@emotion/styled": "11.11.0",
    "@types/node": "20.10.2",
    "@types/react": "18.2.40",
    "@types/react-dom": "18.2.17",
    "@xstate/react": "3.2.2",
    "autoprefixer": "10.4.16",
    "classnames": "2.3.2",
    "eslint": "8.55.0",
    "eslint-config-next": "14.0.3",
    "formik": "2.4.5",
    "framer-motion": "10.16.12",
    "next": "14.0.3",
    "pino": "8.16.2",
    "postcss": "8.4.31",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-use-websocket": "4.5.0",
    "sass": "1.69.5",
    "typescript": "5.3.2",
    "xstate": "4.38.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/jest": "^29.5.11",
    "@xstate/cli": "0.5.11",
    "concurrently": "8.2.2",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "husky": "8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "15.1.0",
    "prettier": "3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,scss,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
