{
  "name": "torii",
  "version": "0.0.38",
  "private": true,
  "scripts": {
    "dev": "npx concurrently npm:watch-xstate npm:next-dev",
    "next-dev": "next dev",
    "build": "npm run build-xstate && next build",
    "start": "next start -p 8080",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,css,scss,yaml,yml}\"",
    "precommit": "lint-staged",
    "build-xstate": "npx xstate typegen src/fsm/game/game.ts",
    "watch-xstate": "npx xstate typegen src/fsm/game/game.ts --watch"
  },
  "dependencies": {
    "@chakra-ui/next-js": "2.1.5",
    "@chakra-ui/react": "2.8.1",
    "@emotion/react": "11.11.1",
    "@emotion/styled": "11.11.0",
    "@types/node": "20.8.9",
    "@types/react": "18.2.33",
    "@types/react-dom": "18.2.14",
    "@xstate/cli": "0.5.7",
    "@xstate/react": "3.2.2",
    "autoprefixer": "10.4.16",
    "classnames": "2.3.2",
    "eslint": "8.52.0",
    "eslint-config-next": "14.0.0",
    "formik": "2.4.5",
    "framer-motion": "10.16.4",
    "lodash": "4.17.21",
    "next": "14.0.0",
    "postcss": "8.4.31",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-use-websocket": "4.5.0",
    "sass": "1.69.5",
    "typescript": "5.2.2",
    "xstate": "4.38.3"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.2.1",
    "concurrently": "8.2.2",
    "eslint-config-prettier": "9.0.0",
    "husky": "8.0.3",
    "lint-staged": "15.0.2",
    "prettier": "3.0.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,scss,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
